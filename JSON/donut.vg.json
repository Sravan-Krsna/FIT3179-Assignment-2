{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A simple donut chart with embedded data.",
    "data": {
      "url": "https://raw.githubusercontent.com/Sravan-Krsna/Sravan-Krsna/main/Data/Spending.csv"
    },
    "mark": {"type": "arc", "innerRadius": 50},
    "encoding": {
      "theta": {"field": "Average Spending", "type": "quantitative"},
      "color": {"field": "Region", "type": "nominal"},
      "tooltip": [
          {"field":"Region", "type": "nominal"},
          {"field":"Average Spending", "type": "quantitative", "title": "Total Spending (Million)"}
    ]
    }
  }
  