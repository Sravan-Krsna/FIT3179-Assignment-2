{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Unemployment Rate",
    "width": 800,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/Sravan-Krsna/FIT3179-Assignment-2/main/JSON/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "projection": {"type": "equalEarth"},
    "layer":[
      {
        "transform": [
          {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {
          "tooltip": {
            "field": "note"
          }
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Sravan-Krsna/Sravan-Krsna/main/Data/unemployment.csv"
              },
              "key": "Country Name",
              "fields": ["2019"]
            }
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
            "field": "2019",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [0, 5, 10, 15],
              "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country Name"},
            {"field": "2019", "type": "quantitative"}
          ]
        }
      }
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Sravan-Krsna/Sravan-Krsna/main/Data/unemployment.csv"
              },
              "key": "Country Name",
              "fields": ["2021"]
            }
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
            "field": "2021",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [0, 5, 10, 15],
              "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country Name"},
            {"field": "2021", "type": "quantitative"}
          ]
        }
      }
    ]
    
  }